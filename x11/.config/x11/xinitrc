# xinitrc 

./2screens.sh 2> /dev/null

# Fix dual boot time issue
sudo timedatectl set-ntp true

# Speed up keyboard input
xset r rate 300 50 &	

# Set kb layout and remap escape to capslock
setxkbmap -option caps:escape
#setxkbmap es # Can be done in /etc/X11/xorg.conf


# Set bg, generate lockscreen, set locker, fix cursor
setbg /home/druskus/img/bg/abstract_mountains.jpg > /dev/null &
xautolock -time 10 -locker "betterlockscreen --lock blur" &
xsetroot -cursor_name left_ptr &

# Launch overlay
#$HOME/.config/polybar/launch.sh > /dev/null 2> /dev/null  &
eww open bar0 > /dev/null 2> /dev/null &
eww open bar1 > /dev/null 2> /dev/null &



#dunst & # Tiramisu + Eww > Dunst
#conky --pause=5 -q &

# Launch compositor
picom 2> /dev/null &
#phicom -b --config ~/.config/picom/picom.conf > /dev/null 2> /dev/null & # Phisch's version

# Noise cancellation
noisetorch -i 2> /dev/null &

flashfocus 2> /dev/null &

night 2> /dev/null

# Load keybindings
sxhkd & 

exec bspwm 

