(defwindow bar0 :monitor 0
               :geometry (geometry :x "0%"
                                   :y "0%"
                                   :width "20px"
                                   :height "100%"
                                   :anchor "left center")
               :stacking "bottom" 
               :exclusive true
               :focusable false
  (box :class "root"
       :orientation "vertical"
    (workspaces_eDP-1)
    (box :halign "center"
         :valign "end"
         :orientation "vertical"
         :space-evenly false
         :spacing 10
      (battery)
      (time)
      (date))))

