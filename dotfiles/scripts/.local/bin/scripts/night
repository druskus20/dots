#!/bin/sh
# Sets a red light mode for night reading
# Depends on redshift

# Usage night [temp]
temp=4000

if [ -n "$1" ] || [ "$(xrandr --verbose | grep Gamma | awk '{print $2}')" = "1.0:1.0:1.0" ]; then
  [ -z "$1" ] || temp="$1"
  redshift -m randr -P -O "$temp" > /dev/null
  notify-send " Switching to night mode"
else 
  redshift -m randr -x > /dev/null
  notify-send " Switching to day mode"
fi 
