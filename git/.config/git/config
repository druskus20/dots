[credential "https://github.com"]
  helper = !/usr/bin/gh auth git-credential
[column]
  ui = auto
[branch]
  sort = -committerdate
[tag]
  sort = version:refname
[diff]
  algorithm = histogram
  colorMoved = plain
  mnemonicPrefix = true
  renames = true
[push]
  default = simple
  autoSetupRemote = true
  followTags = true
[commit]
  verbose = true
[rerere]
  enabled = true
  autoupdate = true
[fetch]
  prune = true
  pruneTags = true
  all = true
[init]
  defaultBranch = master
[url "https://"]
  insteadOf = git://
[url "/"]
  insteadOf = git@:
[safe]
  directory = *
[filter "lfs"]
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
  clean = git-lfs clean -- %f
[alias]
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  log = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[color]
  ui = true
[user]
  email = "43417195+druskus20@users.noreply.github.com"
  name = druskus20
[includeIf "gitdir:~/work/"]
  path = ./config.work
[core]
  pager = delta
  hooksPath = ~/.config/git/hooks
[interactive]
  diffFilter = delta --color-only --diff-so-fancy
[merge]
  conflictstyle = zdiff3

[delta]
  navigate = true    # use n and N to move between diff sections
  side-by-side = true
  features = unobtrusive-line-numbers gruvbox-light
  # delta detects terminal colors automatically; set one of these to disable auto-detection
  # dark = false
  light = true
[delta "gruvbox-light"]
    blame-palette = "#fbf1c7 #f9f5d7 #f2e5bc #ebdbb2 #d5c4a1"
    commit-decoration-style = ul
    dark = false
    file-decoration-style = "#3c3836"
    file-style = "#3c3836"
    hunk-header-decoration-style = box ul
    hunk-header-file-style = bold
    hunk-header-line-number-style = bold "#7c6f64"
    hunk-header-style = file line-number syntax
    line-numbers-left-style = "#7c6f64"
    line-numbers-minus-style = bold "#a04235"
    line-numbers-plus-style = bold "#7c7b20"
    line-numbers-right-style = "#7c6f64"
    line-numbers-zero-style = "#7c6f64"
    # Should match the name of the bat theme
    syntax-theme = gruvbox-light

    # Stronger but still light-friendly colors for removed/added lines
    minus-emph-style = bold syntax "#f2a8a0"   # deeper red, readable on light
    minus-style = syntax "#f9d4d1"            # soft red background
    plus-emph-style = bold syntax "#a8c087"    # deeper green
    plus-style = syntax "#e0e4d3"             # soft green background
    

[delta "unobtrusive-line-numbers"]
    line-numbers = true
    line-numbers-minus-style = "#bebebe"
    line-numbers-zero-style = "#bebebe"
    line-numbers-plus-style = "#bebebe"
    line-numbers-left-format = "{nm:>4} "
    line-numbers-right-format = "{np:>4} "
    line-numbers-left-style = "#7c6f64"
    line-numbers-right-style = "#7c6f64"

